{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build linking libraries",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "${fileDirname}/*.o",
                "-o",
                "${workspaceFolder}/builds/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build folder",
            "command": "gcc",
            "args": [
                "-g",
                "${fileDirname}/*.c",
                "-o",
                "${workspaceFolder}/builds/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/builds/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build library",
            "command": "gcc",
            "args": [
                "-o",
                "${fileBasenameNoExtension}.o",
                "-c",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build all libraries in folder",
            "command": "${workspaceFolder}/.vscode/compile_libraries.sh",
            "args": [
                "${fileDirname}",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Makeheaders",
            "command": "makeheaders",
            "args": [
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "none"
        },
        {
            "type": "shell",
            "label": "Build folder clang",
            "command": "clang",
            "args": [
                "-g",
                "${fileDirname}/*.c",
                "-o",
                "${workspaceFolder}/builds/${fileBasenameNoExtension}",
                "--debug"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": "build"
        }
    ]
}