{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clang build active file (Linux)",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/builds/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build with clang (macOS)",
            "command": "clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/builds/${fileBasenameNoExtension}",
                "--debug"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build"
        }
    ]
}