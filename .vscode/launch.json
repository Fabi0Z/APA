    "version": "0.2.0",
    "configurations": [
        {
            "name": "clang build and debug active file (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builds/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "clang build active file (Linux)",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Clang launch and debug active file (macOS)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builds/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "Build with clang (macOS)",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            }
        }
    ]
}